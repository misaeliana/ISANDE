                            </tbody>
                        </table>

                    <div class="summary-container">
                        <div class="summary-text">Total Amount Due</div>
                        <div class="summary-info-container" ><div class="summary-info" id="totalAmountDue">₱ {{totalAmountDue}}</div></div>
                    </div>
