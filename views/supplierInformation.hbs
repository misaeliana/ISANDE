        <script>
                function capitalize(string){
                    var words = string.toLowerCase().split(' ');
                    for (i=0; i<words.length; i++)
                        words[i] = words[i].charAt(0).toUpperCase() + words[i].substring(1);
                    return words.join(' ');
                }

                $('#item-code').keyup(function() {
                    var item = capitalize($('#item-code').val())
                    $.get('/getCheckItemcode', {item:item}, function(result) {
                        if (result.item == item) {
                            $('#item-code').css("border", "1px solid #B00000");
                            $('#error-new-item-code').text("Item Code already exists");
                            $('#btn-add-new-item').prop('disasbled', true);
                            $('#btn-add-new-item').css("background-color", "#b3b3b3");
                        }
                    
                    })
                })


                function errorMessage(type) {
                    if (type == "noItemCode") {
                        $('#item-code').css("border", "1px solid #B00000");
                        $('#error-new-item-code').text("Please input item code");
                    } 
                    else if (type == "noCategory") {
                        $('#error-item-category').text("Choose a Category");
                    }
                    else if (type == "noUnit") {
                        $('#item-unit').css("border", "1px solid #B00000");
                        $('#error-item-unit').text("Please Input Unit");
                    }
                     else if (type == "noEOQ") {
                        $('#item-EOQ').css("border", "1px solid #B00000");
                        $('#error-item-EOQ').text("Please Input EOQ");
                    }
                       else if (type == "noReorderLevel") {
                        $('#item-reorder-level').css("border", "1px solid #B00000");
                        $('#error-item-reorderlevel').text("Please Input Reorder Level");
                    }
                 } 
                

                function itemCodeValidation(itemCode) {
                    if (itemCode == null || itemCode == "") {
                        errorMessage("noItemCode")
                        return 1;
                    }
                    else 
                        return 0;
                }   

                function categoryValidation(category) {
                    if (category == "no-selected") {
                        errorMessage("noCategory")
                        return 1;
                    }
                    else 
                        return 0;
                }

                function unitValidation(unit) {
                 if (unit == null || unit == "") {
                        errorMessage("noUnit")
                        return 1;
                    }
                    else 
                        return 0;
                }     

                function eoqValidation(eoq) {
                  if (eoq == 0 || eoq < 0) {
                        errorMessage("noEOQ")
                        return 1;
                    }
                    else 
                        return 0;
                }

                function reorderLevelValidation(reorderLevel) {
                   if (reorderLevel == 0 || reorderLevel < 0) {
                        errorMessage("noReorderLevel")
                        return 1;
                    }
                    else 
                        return 0;
                }


                $('#btn-add-new-item').click(function() {
                    var itemCode = capitalize($('#item-code').val());
                    var description = $('#item-description').val();
                    var category = $('#dropdown-item-category').val()
                    var unit = $('#item-unit').val();
                    var eoq = $('#item-EOQ').val();
                    var reorderLevel = $('#item-reorder-level').val();

                    if (!itemCodeValidation(itemCode) && !categoryValidation(category) && !unitValidation(unit) && !eoqValidation(eoq)&& !reorderLevelValidation(reorderLevel)) {

                            $('#item-code').css("border", "1px solid #DDDDDD");
                            $('#item-description').css("border", "1px solid #DDDDDD");
                            $('#item-category').css("border", "1px solid #DDDDDD");
                            $('#item-unit').css("border", "1px solid #DDDDDD");
                            $('#item-EOQ').css("border", "1px solid #DDDDDD");
                            $('#item-reorder-level').css("border", "1px solid #DDDDDD");

                            $('#error-new-item-code').text("");
                            $('#error-new-item-category').text("");
                            $('#error-item-unit').text("");
                            $('#error-item-EOQ').text("");
                            $('#error-item-reorder-level').text("");

                            $.post('/postItemInformation', {itemCode, description, category, unit, eoq, reorderLevel})
                                $('#modal-add-item').modal('hide');
                                $('#add-new-item').trigger('reset');
                                location.reload()

                    }
                })


                    $('#btn-delete-item').click(function() {
                    var itemID = $('#itemID').text();
                    if (confirm("Are you sure you want to delete this item?")) {
                        $.post('/deleteItem', {itemID});
                        alert("The Item was deleted");
                        window.location.replace("/supplierInformation")
                    }
                    else { }
                })

        </script>
