           <script>
            $(document).ready(function() {

                function capitalize(string){
                    var words = string.toLowerCase().split(' ');
                    for (i=0; i<words.length; i++)
                        words[i] = words[i].charAt(0).toUpperCase() + words[i].substring(1);
                    return words.join(' ');
                };

                function errorMessage(type) {

                    if (type == "noContactPerson") {
                        $('#contact-person').css("border", "1px solid #B00000");
                        $('#error-contact-person').text("Invalid contact person");
                    }
                    else if (type == "noNumber") {
                        $('#contact-number').css("border", "1px solid #B00000");
                        $('#error-contact-number').text("Invalid conact number");
                    }
                    else if (type == "noEmail") {
                        $('#email').css("border", "1px solid #B00000");
                        $('#error-email').text("Invalid email");
                    }
                    else if (type == "noAddress") {
                        $('#address').css("border", "1px solid #B00000");
                        $('#error-address').text("Input address");
                    }
                }


                function contactPersonValidation(contactPerson) {
                    if (contactPerson == null || contactPerson == "") {
                        errorMessage("noContactPerson")
                        return 1;
                    }
                    else 
                        return 0;
                }   
                function numberValidation(number) {
                    if (number == 0 || number < 0) {
                        errorMessage("noNumber")
                        return 1;
                    }
                    else 
                        return 0;
                }     
                
                function emailValidation(email) {
                    if (email == null || email == "") {
                        errorMessage("noEmail")
                        return 1;
                    }
                    else 
                        return 0;
                }


                function addressValidation(address) {
                    if (address == null || address == "") {
                        errorMessage("noAddress")
                        return 1;
                    }
                    else 
                        return 0;
                }

                $('#btn-update-supplier').click(function() {
                    var supplierID = $('#supplierID').text();
                    var contactPerson = $('#contact-person').val();
                    var number = $('#contact-number').val();  
                    var email = $('#email').val();
                    var address = $('#address').val();

                    if (!contactPersonValidation(contactPerson) &&!numberValidation(number) 
                    && !emailValidation(email) && !addressValidation(address)) {

                            $('#contact-person').css("border", "1px solid #DDDDDD");
                            $('#contact-number').css("border", "1px solid #DDDDDD");
                            $('#address').css("border", "1px solid #DDDDDD");
                            $('#email').css("border", "1px solid #DDDDDD");

                            $('#error-contact-person').text("");
                            $('#error-contact-number').text("");
                            $('#error-email').text("");
                            $('#error-address').text(""); 

                            $.post('/postUpdateSupplierInformation', {supplierID, contactPerson, number, email, address}, function(result) {
                                    $('#modal-edit-supplier').modal('hide');
                                    $('#edit-supplier').trigger('reset');
                                    alert("Succesfully updated supplier information");
                                    window.location.replace(`/supplier/${result}`)
                            })
                                
                    }
                })

                $('#btn-delete-supplier').click(function() {
                    var supplierID = $('#supplierID').text();
                    if (confirm("Are you sure you want to delete this supplier?")) {
                        $.post('/deleteSupplier', {supplierID});
                        alert("Supplier information was deleted");
                        window.location.replace("/supplierList")
                    }
                    else { }
                })
            })
        </script> 
        
