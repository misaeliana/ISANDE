        <div class="content">
            <div> <!-- ADD FIXED -->
                <div style="display: flex">
                    <div style="width: 50%"><h1 class="bold">New Invoice</h1></div>
                    <div class="btn-status">
                        <h3 id="dateToday"></h3>
                    </div>
                </div>
