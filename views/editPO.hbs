                                    {{/each}}
                                </select>
                            </div>
                            <p class="error" id="error-category modal-error" style="margin-top: 3px; margin-bottom: 3px;"></p>

                            <div class="flex-display">
                                <label for="dropdown-unit" class="modal-label">Unit</label>
