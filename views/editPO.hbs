                        });
                        var itemsString = JSON.stringify(poItems);  
                        var subtotal = parseFloat($('#subtotal').text().slice(1));
                        var vat = parseFloat($('#vat').text().slice(1));
                        var total = parseFloat($('#total').text().slice(1));
                        var discount = parseFloat($('#discount').text().slice(1))
                        $.post('/updatePOWithPrice', {poID, itemsString, discount, subtotal, vat, total}, function(result) {
                            alert("PO updated");
                            window.location = "/purchaseOrders";
