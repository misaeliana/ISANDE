                                    {{/each}}
                                </select>
                            </div>
                            <p class="error modal-error" id="error-unit" style="margin-top: 3px; margin-bottom: 3px;"></p>

                            <div class="flex-display">
                                <label for="reorder-level" class="modal-label">Reorder Level</label>
                                <input id="reorder-level" class="modal-input" type="number" style="text-align: right;"><br>
                            </div>
                            <p class="error modal-error" id="error-reorder-level" style="margin-top: 3px; margin-bottom: 3px;"></p>

                            <div class="flex-display">
                                <label for="EOQ" class="modal-label">EOQ</label> 
                                <input id="EOQ" class="modal-input" type="number" style="text-align: right;"><br>
                            </div>
                            <p class="error modal-error" id="error-EOQ" style="margin-top: 3px; margin-bottom: 3px;"></p>

